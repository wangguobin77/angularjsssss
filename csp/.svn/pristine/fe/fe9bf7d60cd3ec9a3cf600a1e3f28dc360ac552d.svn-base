.dbsx{ height: 100%; }
.dbsx .title{ padding: 25px 18px 0 17px; }
.dbsx .title img{ position: absolute; }
.dbsx h3{ text-align: right;font-weight: normal;font-size: 18px;color: #bdbdbd; }
.dbsx .title span{ display: block;line-height: 2.1;text-align: right;font-size: 16px;color: #989898; }
hr{ width: 185px;margin: 22px auto 0;border: none;border-bottom: 1px solid rgba(189,189,189,.5);opacity: .47; }
.dbsx .sp-list{ height: 55%;margin-top: 23.4px;padding-left: 17px;overflow: hidden; }
.dbsx .sp-list li{ background: url(../images/icon/icon_sp.png) no-repeat 90% top; }
.dbsx .sp-list li:not(:last-child){ margin-bottom: 31px; }
.dbsx .sp-list span{ font-size: 12px;color: #bdbdbd; }
.dbsx .sp-list h5{ margin-bottom: 6px;font-size: 12px;font-weight: normal;letter-spacing: 1px;color: #fff; }
.dbsx .sp-list label{ font-size: 12px;letter-spacing: -0.3px;color: rgba(255,255,255,.65); }
.dbsx .sp-list .ngscroll-content-container{ width: 100%; }
.dbsx .all{ position: absolute;right: 20px;bottom: 39px;width: 94px;margin-top: 93px;padding-top: 16.5px;text-align: right;border-top: 1px solid rgba(189,189,189,.5);opacity: .47; }
.dbsx .all a{ color: #92acb6; }

.left-1,
.left-2{ display: inline-block;height: 100%;vertical-align: top; }
.left-1{ width: 40%; }
.left-2{ width: 60%;margin-left: -5px;padding: 25px 0 0 25px; }
/* 统计图 */
.tjt{ margin-top: 25px; }
.tjt h2{ text-align: center;font-size: 12px;font-weight: normal;color: #219dd0; }
.tjt ul{ width: 60%;margin: 0 auto; }
.tjt li{ display: inline-block;width: 50%;text-align: center; }
.tjt li:last-child{ margin-left: -5px; }
.tjt li img{ width: 12px;margin: 0 0 5px 6.8px; }
.tjt li p{ display: inline-block;margin-top: 6px;font-size: 15px;color: #395b77; }
.tjt li span{ display: block;margin-top: 3px;font-size: 12px;color: #92acb6; }
.histogram{ width: 100%;height: 220px; }
.download{ display: block;width: 102px;height: 27px;margin: 0 auto;background: url(../images/btn/btn_download.png) no-repeat;border: none;cursor: pointer; }
.download:active{ position: relative;top: 1px;left: 1px; }
/* 积分兑换 */
.left-2 h2{ font-size: 18px;font-weight: normal;color: #219dd0; }
.jfdh{ margin-top: 22px; }
.jfdh li{ display: inline-block;width: 25%;height: 99px;padding-top: 3px;text-align: center;cursor: pointer; }
.jfdh li:not(:first-child){ margin-left: -5px; }
.jfdh li:hover{ background: url(../images/bg/bg-jfdh.png) no-repeat center top; }
.jfdh li:hover h3,
.jfdh li:hover p{ color: #fff; }
.left-2 h3{ margin-bottom: 6px;font-size: 17px;font-weight: normal;color: #30304d; }
.left-2 p{ font-size: 12px;color: rgba(70,69,69,.96); }
/* 结算相关 */
.step{ margin-top: 20px; }
.step ul{ display: inline-block;width: 30%;vertical-align: top; }
.step li{ height: 100px;padding-left: 10px;font-size: 12px;color: #222; }
.step img{ width: 37px;margin-right: 10px; }
.step-1{ background: url(../images/bg/straight-angled.png) no-repeat left 80% / 20px; }
.step-2{ background: url(../images/bg/straight-dashed.png) no-repeat 20px 10% / 15px,url(../images/bg/straight-green.png) no-repeat 20px 85% / 15px; }